<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobile.a21line">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".Login.Login_Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login.Join_Activity_First" />
        <activity android:name=".Login.Join_Activity_Second" />
        <activity android:name=".Search_Address_Activity" />
        <activity android:name=".Login.Join_Activity_PrivateInfo" />
        <activity android:name=".Home.Home_Activity" >

        </activity>
        <activity
            android:name=".Bid.Bid_Activity"
            android:windowSoftInputMode="adjustNothing" />

        <activity
            android:name=".Bid.Bid_Popup_Sorting"
            android:theme="@style/Theme.AppCompat.Dialog" />


        <activity
            android:name=".Result.Result_Activity"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".Setbid.Setbid_Activity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Setbid.Setbid_Popup_BusinessSelect"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name=".Setbid.Setbid_Popup_LocationSelect"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity android:name=".Bid.Bid_Detail_Activity"></activity>
    </application>

</manifest>