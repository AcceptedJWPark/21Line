<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="#ffffff"
        android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc"
        android:layout_marginTop="@dimen/height_10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/height_30dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#dcdcdc"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:minHeight="@dimen/height_30dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:textSize="@dimen/txt_main"
            android:background="#f5f5f5"
            android:textColor="@color/textColor_deep"
            android:text="제목"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#dcdcdc"/>

        <TextView
            android:id="@+id/tv_noticeDetail_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:minHeight="@dimen/height_30dp"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="@dimen/txt_sub"
            android:text="[나라장터] 2017년도말 기준 종합건설업(일부 전문건설업 포함) 공사실적 적용기준일 공고 "
            android:textColor="@color/textColor_deep"
            android:lineSpacingMultiplier="1.5"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#dcdcdc"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/height_30dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#dcdcdc"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:minHeight="@dimen/height_30dp"
            android:paddingLeft="10dp"
            android:textColor="@color/textColor_deep"
            android:background="#f5f5f5"
            android:textSize="@dimen/txt_main"
            android:text="작성일"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#dcdcdc"/>

        <TextView
            android:id="@+id/tv_noticeDetail_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:minHeight="@dimen/height_30dp"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="@dimen/txt_sub"
            android:text="2018-06-04"
            android:textColor="@color/textColor_deep"
            android:lineSpacingMultiplier="1.5"
            android:includeFontPadding="false"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#dcdcdc"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dcdcdc"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="15"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="13.5"
            >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bgr_cs_notice"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="@dimen/height_10dp"
    >
    <TextView
        android:id="@+id/tv_noticeDetail_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:lineSpacingMultiplier="1.5"
        android:padding="@dimen/height_10dp"
        android:textColor="@color/textColor_deep"
        android:textSize="@dimen/txt_main"
        />
</ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            >

    <Button
        android:id="@+id/btn_cancel_notice_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_20dp"
        android:text="목록 보기"
        android:background="@drawable/bgr_bigbtn"
        android:textSize="@dimen/txt_main"
        android:textColor="#ffffff"
        android:textStyle="bold"
        />

        </LinearLayout>


    </LinearLayout>

    </LinearLayout>
