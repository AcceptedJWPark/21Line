<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_number_qna"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:text="1"
            android:gravity="center"
            android:textSize="@dimen/txt_main"
            android:textColor="@color/textColor_deep"
            />


        <TextView
            android:id="@+id/tv_title_qna"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center|left"
            android:textSize="@dimen/txt_main"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/textColor_deep"
            />


        <TextView
            android:id="@+id/tv_date_qna"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="18/06/24"
            android:textSize="@dimen/txt_main"
            android:textColor="@color/textColor_deep"
            />

        <TextView
            android:id="@+id/tv_progress_qna"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="답변 대기"
            android:textSize="@dimen/txt_sub"
            android:textColor="@color/textColor_highlight_ngt"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/iv_delete_qna"
                android:layout_width="@dimen/height_10dp"
                android:layout_height="@dimen/height_10dp"
                android:src="@drawable/icon_delete2"
                />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>