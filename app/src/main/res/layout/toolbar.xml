<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/colorPrimaryDark"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="0dp"
    >

    <LinearLayout
        android:id="@+id/dl_OpenIcon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        >

    <ImageView
        android:id="@+id/img_toolbarIcon_Left_Back"
        android:layout_width="@dimen/height_20dp"
        android:layout_height="@dimen/height_20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/icon_backbtn"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        />
        <ImageView
            android:id="@+id/img_toolbarIcon_Left_Menu"
            android:layout_width="@dimen/height_20dp"
            android:layout_height="@dimen/height_20dp"
            android:layout_marginLeft="10dp"
            android:paddingRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_menu"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_toolbarTitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="맞춤낙찰_"
        android:gravity="center"
        android:maxWidth="@dimen/height_300dp"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"
        android:textSize="@dimen/txt_toolbar"
        />


    <LinearLayout
        android:id="@+id/DrawerLayout_AlarmIcon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center|right">


        <TextView
            android:id="@+id/tv_toolbarIcon_Edit_Right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Memo"
            android:textColor="#ffffff"
            android:textSize="@dimen/txt_main"
            android:textStyle="bold"
            android:visibility="gone"
            />


        <ImageView
            android:id="@+id/img_toolbarIcon_MyBid"
            android:layout_width="@dimen/height_20dp"
            android:layout_height="@dimen/height_20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_mybid_white"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/tv_toolbarIcon_Right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="검색 조건"
            android:textColor="#ffffff"
            android:textSize="@dimen/txt_main"
            android:textStyle="bold"
            android:visibility="gone"
            />

    </LinearLayout>


</RelativeLayout>