<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/colorPrimaryDark"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="0dp"
    >

    <LinearLayout
        android:id="@+id/dl_OpenIcon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        >

    <ImageView
        android:id="@+id/img_toolbarIcon_Left_Back"
        android:layout_width="@dimen/height_20dp"
        android:layout_height="@dimen/height_20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/icon_backbtn"
        android:visibility="gone"
        />
        <ImageView
            android:id="@+id/img_toolbarIcon_Left_Menu"
            android:layout_width="@dimen/height_20dp"
            android:layout_height="@dimen/height_20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:paddingRight="5dp"
            android:src="@drawable/icon_menu"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_toolbarTitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="회원 가입 (1/2)"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"
        android:textSize="@dimen/txt_toolbar"
        />


    <LinearLayout
        android:id="@+id/DrawerLayout_AlarmIcon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        >

    <ImageView
        android:id="@+id/img_toolbarIcon_Right"
        android:layout_width="@dimen/height_30dp"
        android:layout_height="@dimen/height_30dp"
        android:layout_centerVertical="true"
        android:paddingLeft="5dp"
        android:src="@android:drawable/ic_search_category_default"
        android:tint="#ffffff"
        android:layout_alignParentRight="true"
        android:visibility="visible"
        />

        <TextView
            android:id="@+id/tv_toolbarIcon_Right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="초기화"
            android:gravity="center"
            android:textSize="@dimen/txt_main"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:visibility="gone"
            />



    </LinearLayout>


</RelativeLayout>