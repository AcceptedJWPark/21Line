<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/colorPrimaryDark"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="0dp"
    >

    <LinearLayout
        android:id="@+id/DrawerLayout_OpenIcon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        >

    <ImageView
        android:id="@+id/img_toolbarIcon_Left_Back"
        android:layout_width="@dimen/height_30dp"
        android:layout_height="@dimen/height_30dp"
        android:layout_centerVertical="true"
        android:paddingRight="5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/icon_backbtn"
        android:visibility="gone"
        />
        <ImageView
            android:id="@+id/img_toolbarIcon_Left_Menu"
            android:layout_width="@dimen/height_20dp"
            android:layout_height="@dimen/height_20dp"
            android:layout_centerVertical="true"
            android:paddingRight="5dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/icon_menu"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_toolbarTitle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:text="회원 가입 (1/2)"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"
        android:textSize="@dimen/txt_toolbar"
        />


    <LinearLayout
        android:id="@+id/DrawerLayout_AlarmIcon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="invisible"
        >

    <ImageView
        android:id="@+id/img_toolbarIcon_Right"
        android:layout_width="@dimen/height_30dp"
        android:layout_height="@dimen/height_30dp"
        android:layout_centerVertical="true"
        android:tint="#ffffff"
        android:paddingLeft="5dp"
        android:layout_marginRight="15dp"
        android:src="@android:drawable/ic_popup_reminder"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        />
    </LinearLayout>


</LinearLayout>