<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/colorPrimaryDark"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="0dp"
    >

    <LinearLayout
        android:id="@+id/dl_OpenIcon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        >

    <ImageView
        android:id="@+id/img_toolbarIcon_Left_Back"
        android:layout_width="@dimen/height_20dp"
        android:layout_height="@dimen/height_20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/icon_backbtn"
        android:visibility="gone"
        />
        <ImageView
            android:id="@+id/img_toolbarIcon_Left_Menu"
            android:layout_width="@dimen/height_20dp"
            android:layout_height="@dimen/height_20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:paddingRight="5dp"
            android:src="@drawable/icon_menu"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_toolbarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원 가입 (1/2)"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"
        android:textSize="@dimen/txt_toolbar"
        />

    <ImageView
        android:id="@+id/iv_toolbarModify"
        android:layout_width="@dimen/height_15dp"
        android:layout_height="@dimen/height_15dp"
        android:src="@drawable/icon_pencil"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv_toolbarTitle"
        android:layout_centerVertical="true"
        android:layout_marginBottom="1dp"
        android:visibility="gone"
        />


    <LinearLayout
        android:id="@+id/DrawerLayout_AlarmIcon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        >






        <ImageView
        android:id="@+id/img_toolbarIcon_Refresh"
        android:layout_width="@dimen/height_20dp"
        android:layout_height="@dimen/height_20dp"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_refresh"
        android:layout_alignParentRight="true"
        android:visibility="gone"
            android:paddingRight="5dp"
        />


        <ImageView
            android:id="@+id/img_toolbarIcon_Sorting"
            android:layout_width="@dimen/height_15dp"
            android:layout_height="@dimen/height_15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_sorting2"
            android:layout_marginRight="5dp"
            android:tint="#ffffff"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            />


        <TextView
            android:id="@+id/tv_toolbarIcon_Right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="검색 조건"
            android:gravity="center"
            android:textSize="@dimen/txt_main"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:visibility="gone"
            />

    </LinearLayout>


</RelativeLayout>