<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_home"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:mContext="com.mobile.a21line.Home.Home_Activity"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/customerservice_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40dp"
            android:padding="0dp"
            android:fitsSystemWindows="true"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            >
            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/toolbar"/>
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/height_10dp"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="업종 선택 (4)"
                        android:textColor="@color/textColor_deep"
                        android:textSize="@dimen/txt_main" />

                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/bgr_searchbtn2"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.5"
                    android:layout_marginTop="@dimen/height_10dp"
                    android:minHeight="@dimen/height_30dp"
                    android:padding="@dimen/height_10dp"
                    android:text="클릭해서 추가"
                    android:textColor="@color/textColor_addition"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/txt_sub"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f0f0f0"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/height_10dp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="지역 선택 (4)"
                        android:textColor="@color/textColor_deep"
                        android:textSize="@dimen/txt_main" />

                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bgr_searchbtn2"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.5"
                    android:minHeight="@dimen/height_30dp"
                    android:layout_marginTop="@dimen/height_10dp"
                    android:padding="@dimen/height_10dp"
                    android:text="클릭해서 추가"
                    android:textColor="@color/textColor_addition"
                    android:textSize="@dimen/txt_sub"
                    android:layout_marginBottom="@dimen/height_10dp"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f0f0f0"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/height_10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="공고 구분"
                        android:textColor="@color/textColor_deep"
                        android:textSize="@dimen/txt_main" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bgr_searchbtn2"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.5"
                    android:minHeight="@dimen/height_30dp"
                    android:layout_marginTop="@dimen/height_10dp"
                    android:padding="@dimen/height_10dp"
                    android:layout_marginBottom="@dimen/height_10dp"
                    android:text="클릭해서 추가"
                    android:textColor="@color/textColor_addition"
                    android:textSize="@dimen/txt_sub"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f0f0f0"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/height_10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="금액"
                        android:textColor="@color/textColor_deep"
                        android:textSize="@dimen/txt_main" />

                    <ImageView
                        android:layout_width="@dimen/height_10dp"
                        android:layout_height="@dimen/height_10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_arrowdown" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bgr_searchbtn2"
                    android:orientation="vertical"
                    android:padding="@dimen/height_10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_30dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.3"
                                android:background="@drawable/bgr_loginbox"
                                android:gravity="center"
                                android:inputType="number"
                                android:text="0"
                                android:textColor="@color/textColor_deep"
                                android:textSize="@dimen/txt_sub" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:gravity="center|right"
                                android:text="억원"
                                android:textColor="@color/textColor_deep"
                                android:textSize="@dimen/txt_sub" />

                        </LinearLayout>


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="0.1"
                            android:gravity="center"
                            android:text="~"
                            android:textColor="@color/textColor_deep"
                            android:textSize="@dimen/txt_main" />


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.3"
                                android:background="@drawable/bgr_loginbox"
                                android:gravity="center"
                                android:inputType="number"
                                android:text="50"
                                android:textColor="@color/textColor_deep"
                                android:textSize="@dimen/txt_sub" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:gravity="center|right"
                                android:text="억원"
                                android:textColor="@color/textColor_deep"
                                android:textSize="@dimen/txt_sub" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_20dp"
                        android:layout_marginTop="@dimen/height_10dp"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/bgr_smallbtn"
                            android:includeFontPadding="true"
                            android:text="1억 이하"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/txt_sub" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/bgr_smallbtn"
                            android:includeFontPadding="true"
                            android:text="1 ~ 5 억"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/txt_sub" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/bgr_smallbtn"
                            android:includeFontPadding="true"
                            android:text="5 ~ 10 억"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/txt_sub" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/bgr_smallbtn"
                            android:includeFontPadding="true"
                            android:text="10 ~ 50 억"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/txt_sub" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bgr_smallbtn"
                            android:includeFontPadding="true"
                            android:text="50억 이상"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/txt_sub" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f0f0f0"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/height_10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/height_10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="검색 기간"
                        android:textColor="@color/textColor_deep"
                        android:textSize="@dimen/txt_main" />

                    <ImageView
                        android:layout_width="@dimen/height_10dp"
                        android:layout_height="@dimen/height_10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_arrowdown" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bgr_searchbtn2"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:padding="@dimen/height_10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_30dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/et_price1_setbid"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.3"
                                android:background="@drawable/bgr_loginbox"
                                android:gravity="center"
                                android:text="2018-06-18"
                                android:textColor="@color/textColor_deep"
                                android:textSize="@dimen/txt_sub" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:gravity="center|right"
                                android:text="부터"
                                android:textColor="@color/textColor_deep"
                                android:textSize="@dimen/txt_sub" />

                        </LinearLayout>


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="0.1"
                            android:gravity="center"
                            android:text="~"
                            android:textColor="@color/textColor_deep"
                            android:textSize="@dimen/txt_main" />


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/et_price2_setbid"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.3"
                                android:background="@drawable/bgr_loginbox"
                                android:gravity="center"
                                android:text="2018-06-18"
                                android:textColor="@color/textColor_deep"
                                android:textSize="@dimen/txt_sub" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"
                                android:gravity="center|right"
                                android:text="까지"
                                android:textColor="@color/textColor_deep"
                                android:textSize="@dimen/txt_sub" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_20dp"
                        android:layout_marginTop="@dimen/height_10dp"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/bgr_smallbtn"
                            android:includeFontPadding="true"
                            android:text="오늘"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/txt_sub" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/bgr_smallbtn"
                            android:includeFontPadding="true"
                            android:text="1 개월"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/txt_sub" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/bgr_smallbtn"
                            android:includeFontPadding="true"
                            android:text="3 개월"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/txt_sub" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/bgr_smallbtn"
                            android:includeFontPadding="true"
                            android:text="6 개월"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/txt_sub" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bgr_smallbtn"
                            android:includeFontPadding="true"
                            android:text="12 개월"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/txt_sub" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f0f0f0"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/height_10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/height_10dp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_40dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="검색 단어"
                        android:layout_marginTop="@dimen/height_10dp"
                        android:textColor="@color/textColor_deep"
                        android:textSize="@dimen/txt_main" />

                    <ImageView
                        android:layout_width="@dimen/height_10dp"
                        android:layout_height="@dimen/height_10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_arrowdown" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_50dp"
                    android:background="@drawable/bgr_searchbtn2"
                    android:visibility="gone"
                    android:padding="@dimen/height_10dp">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bgr_loginbox"
                        android:hint="발주처, 공고명(공고번호), 낙찰업체(1순위 업체)"
                        android:paddingLeft="10dp"
                        android:textColor="@color/textColor_deep"
                        android:textSize="@dimen/txt_sub" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f0f0f0"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/height_10dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_30dp"
                android:layout_marginBottom="@dimen/height_10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/height_10dp"
                android:background="@drawable/bgr_bigbtn"
                android:text="검색 하기"
                android:textColor="#ffffff"
                android:textSize="@dimen/txt_main"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>
    </ScrollView>
    <FrameLayout
        android:id="@+id/fl_drawerView_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include
            layout="@layout/drawerlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>