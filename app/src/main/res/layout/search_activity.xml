<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_search"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:mContext="com.mobile.a21line.Home.Home_Activity"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/customerservice_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40dp"
            android:padding="0dp"
            android:fitsSystemWindows="true"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            >
            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/toolbar"/>
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/height_10dp"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:id="@+id/tv_search_businessCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="업종 선택 (0)"
                        android:textColor="@color/textColor_deep"
                        android:textSize="@dimen/txt_main" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_business_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/bgr_searchbtn2"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.5"
                    android:layout_marginTop="@dimen/height_10dp"
                    android:minHeight="@dimen/height_30dp"
                    android:padding="@dimen/height_10dp"
                    android:text="클릭해서 추가"
                    android:textColor="@color/textColor_addition"
                    android:layout_marginBottom="10dp"
                    android:textSize="@dimen/txt_sub"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f0f0f0"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/height_10dp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:id="@+id/tv_search_locationCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="지역 선택 (0)"
                        android:textColor="@color/textColor_deep"
                        android:textSize="@dimen/txt_main" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_location_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bgr_searchbtn2"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.5"
                    android:minHeight="@dimen/height_30dp"
                    android:layout_marginTop="@dimen/height_10dp"
                    android:padding="@dimen/height_10dp"
                    android:text="클릭해서 추가"
                    android:textColor="@color/textColor_addition"
                    android:textSize="@dimen/txt_sub"
                    android:layout_marginBottom="@dimen/height_10dp"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f0f0f0"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/height_10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="공고 구분"
                        android:textColor="@color/textColor_deep"
                        android:textSize="@dimen/txt_main" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_bidType_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bgr_searchbtn2"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.5"
                    android:minHeight="@dimen/height_30dp"
                    android:layout_marginTop="@dimen/height_10dp"
                    android:padding="@dimen/height_10dp"
                    android:layout_marginBottom="@dimen/height_10dp"
                    android:text="클릭해서 추가"
                    android:textColor="@color/textColor_addition"
                    android:textSize="@dimen/txt_sub"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f0f0f0"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/height_10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="금액"
                        android:textColor="@color/textColor_deep"
                        android:textSize="@dimen/txt_main" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_price_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bgr_searchbtn2"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.5"
                    android:minHeight="@dimen/height_30dp"
                    android:layout_marginTop="@dimen/height_10dp"
                    android:padding="@dimen/height_10dp"
                    android:layout_marginBottom="@dimen/height_10dp"
                    android:text="클릭해서 추가"
                    android:textColor="@color/textColor_addition"
                    android:textSize="@dimen/txt_sub"
                    />
            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f0f0f0"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/height_10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="검색 기간"
                        android:textColor="@color/textColor_deep"
                        android:textSize="@dimen/txt_main" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_period_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bgr_searchbtn2"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.5"
                    android:minHeight="@dimen/height_30dp"
                    android:layout_marginTop="@dimen/height_10dp"
                    android:padding="@dimen/height_10dp"
                    android:layout_marginBottom="@dimen/height_10dp"
                    android:text="클릭해서 추가"
                    android:textColor="@color/textColor_addition"
                    android:textSize="@dimen/txt_sub"
                    />
            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f0f0f0"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/height_10dp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="검색 단어"
                        android:textColor="@color/textColor_deep"
                        android:textSize="@dimen/txt_main" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        >

                        <TextView
                            android:id="@+id/tv_searchType1_search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="발주처"
                            android:textSize="@dimen/txt_sub"
                            android:textColor="#000000"
                            />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#c8c8c8"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            />

                        <TextView
                            android:id="@+id/tv_searchType2_search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="공고명"
                            android:textSize="@dimen/txt_sub"
                            android:textColor="@color/textColor_addition"
                            />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#c8c8c8"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            />

                        <TextView
                            android:id="@+id/tv_searchType3_search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="공고번호"
                            android:textSize="@dimen/txt_sub"
                            android:textColor="@color/textColor_addition"
                            />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#c8c8c8"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            />

                        <TextView
                            android:id="@+id/tv_searchType4_search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="낙찰업체"
                            android:textSize="@dimen/txt_sub"
                            android:textColor="@color/textColor_addition"
                            />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#c8c8c8"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            />

                        <TextView
                            android:id="@+id/tv_searchType5_search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1순위 업체"
                            android:textSize="@dimen/txt_sub"
                            android:textColor="@color/textColor_addition"
                            />


                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_50dp"
                    android:background="@drawable/bgr_searchbtn2"
                    android:layout_marginTop="@dimen/height_10dp"
                    android:padding="@dimen/height_10dp">

                    <EditText
                        android:id="@+id/et_search"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bgr_loginbox"
                        android:hint="발주처명으로 검색합니다."
                        android:paddingLeft="10dp"
                        android:textColor="@color/textColor_deep"
                        android:textSize="@dimen/txt_sub" />

                </LinearLayout>


            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f0f0f0"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/height_10dp"
                />

            <Button
                android:id="@+id/btn_go_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_30dp"
                android:layout_marginBottom="@dimen/height_10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="@dimen/height_10dp"
                android:background="@drawable/bgr_bigbtn"
                android:text="검색 하기"
                android:textColor="#ffffff"
                android:textSize="@dimen/txt_main"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>
    </ScrollView>
    <FrameLayout
        android:id="@+id/fl_drawerView_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include
            layout="@layout/drawerlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>