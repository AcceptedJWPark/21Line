<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:id="@+id/ll_sortingbox_bid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="@dimen/height_10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40dp"
            android:background="@drawable/bgr_btn_clicked"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분석 결과"
                android:textSize="@dimen/txt_main"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

            <ImageView
                android:id="@+id/iv_cancel_analysisresult"
                android:layout_width="@dimen/height_15dp"
                android:layout_height="@dimen/height_15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_close2"
                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/ll_memo_ananlysis_detail_result"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_100dp"
                android:orientation="vertical"
                >
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dcdcdc" />


            <LinearLayout
                android:id="@+id/ll_analysis_detail_request_memo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_100dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="담당자 메모"
                    android:gravity="center"
                    android:textColor="@color/textColor_deep"
                    android:background="#f5f5f5"
                    android:textSize="@dimen/txt_main"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#dcdcdc"/>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    >

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true"
                        >
                    <TextView
                        android:id="@+id/tv_analysis_detail_request_memo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/textColor_deep"
                        android:textSize="@dimen/txt_sub"
                        android:gravity="top|left"
                        android:textColorHint="@color/textColor_addition"
                        android:lineSpacingMultiplier="1.5"
                        android:padding="@dimen/height_5dp"
                        />

                    </ScrollView>

                </LinearLayout>

            </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dcdcdc" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_40dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="추천 사정율"
                    android:gravity="center"
                    android:background="#f5f5f5"
                    android:textColor="@color/textColor_deep"
                    android:textSize="@dimen/txt_main"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#dcdcdc"/>


                        <TextView
                            android:id="@+id/tv_analResult_percent"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:text="101.12154%"
                            android:textColor="@color/textColor_highlight_ngt"
                            android:textSize="@dimen/txt_main"
                            android:gravity="center"

                            />




            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dcdcdc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_40dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="추천 금액"
                    android:background="#f5f5f5"
                    android:textColor="@color/textColor_deep"
                    android:textSize="@dimen/txt_main" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#dcdcdc"/>

                <TextView
                    android:id="@+id/tv_analResult_tuchalMoney"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="24,859,942원"
                    android:textColor="@color/textColor_highlight_pgt"
                    android:textSize="@dimen/txt_main"
                    android:gravity="center"

                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dcdcdc"
                />

        </LinearLayout>




        </LinearLayout>

    </LinearLayout>


