<?xml version="1.0" encoding="utf-8"?>



    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    android:background="#ffffff"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/customerservice_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40dp"
        android:contentInsetLeft="0dp"
        android:contentInsetStart="0dp"
        android:fitsSystemWindows="true"
        android:padding="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.appcompat.widget.Toolbar>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/height_10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#969696"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/height_30dp"
                android:orientation="horizontal"
                >



                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:minHeight="@dimen/height_30dp"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/txt_main"
                    android:textColor="@color/textColor_deep"
                    android:background="@drawable/bgr_bid_detail_title1"
                    android:text="업체명"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/height_30dp"
                    android:background="@drawable/bgr_bid_detail_contens1"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|left"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_25dp"
                        android:minHeight="@dimen/height_25dp"
                        android:background="@drawable/bgr_analysis_inputbox"
                        android:lineSpacingMultiplier="1.5"
                        android:includeFontPadding="false"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="@dimen/txt_sub"
                        android:textColor="@color/textColor_deep"
                        android:singleLine="true"
                        />

            </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/height_30dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:minHeight="@dimen/height_30dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/textColor_deep"
                    android:textSize="@dimen/txt_main"
                    android:background="@drawable/bgr_bid_detail_title1"
                    android:text="담당자명"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/height_30dp"
                    android:background="@drawable/bgr_bid_detail_contens1"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|left"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_25dp"
                        android:minHeight="@dimen/height_25dp"
                        android:background="@drawable/bgr_analysis_inputbox"
                        android:lineSpacingMultiplier="1.5"
                        android:includeFontPadding="false"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="@dimen/txt_sub"
                        android:textColor="@color/textColor_deep"
                        android:singleLine="true"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_relativeResult_Detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/height_30dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:minHeight="@dimen/height_30dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/textColor_deep"
                    android:textSize="@dimen/txt_main"
                    android:background="@drawable/bgr_bid_detail_title1"
                    android:text="연락처"

                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/height_30dp"
                    android:background="@drawable/bgr_bid_detail_contens1"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|left"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_25dp"
                        android:minHeight="@dimen/height_25dp"
                        android:background="@drawable/bgr_analysis_inputbox"
                        android:lineSpacingMultiplier="1.5"
                        android:includeFontPadding="false"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="@dimen/txt_sub"
                        android:textColor="@color/textColor_deep"
                        android:singleLine="true"
                        />

                </LinearLayout>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/height_30dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:minHeight="@dimen/height_30dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/textColor_deep"
                    android:textSize="@dimen/txt_main"
                    android:background="@drawable/bgr_bid_detail_title1"
                    android:text="E-mail"
                    />

                <LinearLayout
                    android:id="@+id/tv_relativeResult_Detail"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/height_30dp"
                    android:background="@drawable/bgr_bid_detail_contens1"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|left"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_25dp"
                        android:minHeight="@dimen/height_25dp"
                        android:background="@drawable/bgr_analysis_inputbox"
                        android:lineSpacingMultiplier="1.5"
                        android:includeFontPadding="false"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="@dimen/txt_sub"
                        android:textColor="@color/textColor_deep"
                        android:singleLine="true"
                        />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/height_30dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:minHeight="@dimen/height_30dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/textColor_deep"
                    android:textSize="@dimen/txt_main"
                    android:background="@drawable/bgr_bid_detail_title1"
                    android:text="제목"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/height_30dp"
                    android:background="@drawable/bgr_bid_detail_contens1"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|left"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_25dp"
                        android:minHeight="@dimen/height_25dp"
                        android:background="@drawable/bgr_analysis_inputbox"
                        android:lineSpacingMultiplier="1.5"
                        android:includeFontPadding="false"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textSize="@dimen/txt_sub"
                        android:textColor="@color/textColor_deep"
                        android:singleLine="true"
                        />

                </LinearLayout>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/height_30dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:minHeight="@dimen/height_30dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/textColor_deep"
                    android:textSize="@dimen/txt_main"
                    android:background="@drawable/bgr_bid_detail_title1"
                    android:text="내용"

                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_150dp"
                    android:layout_weight="2.5"
                    android:background="@drawable/bgr_bid_detail_contens1"
                    android:orientation="vertical"
                    >

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true"
                        android:layout_margin="@dimen/height_5dp"
                        >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:lineSpacingMultiplier="1.5"
                        android:background="@drawable/bgr_analysis_inputbox"
                        android:gravity="left|top"
                        android:padding="@dimen/height_5dp"
                        android:textSize="@dimen/txt_sub"
                        android:textColor="@color/textColor_deep"
                        />
                    </ScrollView>


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_30dp"
                android:gravity="center"
                android:layout_marginTop="@dimen/height_10dp"
                >

                <ImageView
                    android:layout_width="@dimen/height_10dp"
                    android:layout_height="@dimen/height_10dp"
                    android:src="@drawable/icon_chechbox_unchecked"
                    android:layout_marginLeft="10dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="개인정보 보호를 위한 동의"
                    android:gravity="center"
                    android:textSize="@dimen/txt_sub"
                    android:textColor="@color/textColor_deep"
                    android:layout_marginLeft="10dp"
                    />


            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bgr_bigbtn"
                android:layout_marginTop="@dimen/height_10dp"
                android:textColor="#ffffff"
                android:text="문의 하기"
                android:textSize="@dimen/txt_main"
                android:textStyle="bold"
                />


        </LinearLayout>

    </LinearLayout>
