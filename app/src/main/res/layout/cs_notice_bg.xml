<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_number_notice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:text="1"
            android:gravity="center"
            android:textSize="@dimen/txt_main"
            android:textColor="@color/textColor_deep"
            />


        <TextView
            android:id="@+id/tv_title_notice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center|left"
            android:text="[한국수력원자력] 시스템 보안 점검 작업으로 인한 시스템 서비스 한시적 중단 알림"
            android:textSize="@dimen/txt_main"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/textColor_deep"
            />


        <TextView
            android:id="@+id/tv_date_notice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="18-06-24"
            android:textSize="@dimen/txt_main"
            android:textColor="@color/textColor_deep"
            />



    </LinearLayout>
</LinearLayout>