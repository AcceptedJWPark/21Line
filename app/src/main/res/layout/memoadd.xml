<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:layout_width="@dimen/height_300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40dp"
            android:background="@drawable/bgr_btn_clicked"

            >

        <TextView
            android:id="@+id/tv_memotitle_analysis"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="메모 달기"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/txt_main"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            />

            <TextView
                android:id="@+id/tv_delete_memoadd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/iv_close_memoadd"
                android:gravity="center"
                android:text="메모 삭제"
                android:textColor="@color/textColor_highlight_ngt"
                android:layout_marginRight="15dp"
                android:textSize="@dimen/txt_sub" />


            <ImageView
                android:id="@+id/iv_close_memoadd"
                android:layout_width="@dimen/height_15dp"
                android:layout_height="@dimen/height_15dp"
                android:src="@drawable/icon_close2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/height_10dp"
            >

            <LinearLayout
                android:id="@+id/ll_priceinfo_memo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_90dp"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/height_10dp"
                android:background="@drawable/bgr_analysis_inputbox"
                android:padding="1dp"
                >

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_30dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_30dp"
                    android:layout_weight="1.5"
                    android:text="투찰금액"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/txt_sub"
                    android:textColor="@color/textColor_deep"
                    android:background="#f5f5f5"
                    />

                <EditText
                    android:id="@+id/et_price_memo"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_30dp"
                    android:layout_weight="3"
                    />

            </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_30dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_30dp"
                        android:layout_weight="1.5"
                        android:text="사정율"
                        android:gravity="left|center"
                        android:paddingLeft="10dp"
                        android:textSize="@dimen/txt_sub"
                        android:textColor="@color/textColor_deep"
                        android:background="#f5f5f5"
                        />

                    <EditText
                        android:id="@+id/et_percent1_memo"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_30dp"
                        android:layout_weight="3"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_30dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="1dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_30dp"
                        android:layout_weight="1.5"
                        android:text="투찰율"
                        android:gravity="left|center"
                        android:paddingLeft="10dp"
                        android:textSize="@dimen/txt_sub"
                        android:textColor="@color/textColor_deep"
                        android:background="#f5f5f5"
                        />

                    <EditText
                        android:id="@+id/et_percent2_memo"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/height_30dp"
                        android:layout_weight="3"
                        />

                </LinearLayout>



            </LinearLayout>

            <EditText
                android:id="@+id/et_memoadd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_150dp"
                android:background="@drawable/bgr_analysis_inputbox"
                android:layout_marginTop="@dimen/height_10dp"
                android:textColor="@color/textColor_deep"
                android:textSize="@dimen/txt_sub"
                android:gravity="top|left"
                android:lineSpacingMultiplier="1.5"
                android:padding="5dp"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/tv_memoadd_analysis"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bgr_analysis_inputbox"
                android:layout_marginTop="@dimen/height_10dp"
                android:textColor="@color/textColor_deep"
                android:textSize="@dimen/txt_sub"
                android:gravity="top|left"
                android:lineSpacingMultiplier="1.5"
                android:padding="5dp"
                android:visibility="gone"
                />

        </LinearLayout>


        <Button
            android:id="@+id/btn_save_memoadd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_20dp"
            android:background="@drawable/bgr_bigbtn"
            android:text="저장 하기"
            android:textColor="#ffffff"
            android:textSize="@dimen/txt_main"
            android:layout_marginBottom="@dimen/height_10dp"
            />


        </LinearLayout>

    </LinearLayout>


