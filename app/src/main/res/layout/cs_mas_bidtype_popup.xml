<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="@dimen/height_250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/bgr_btn_clicked">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="상담 분야 선택"
            android:textSize="@dimen/txt_main"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            />

            <ImageView
                android:id="@+id/iv_cancel_mas"
                android:layout_width="@dimen/height_15dp"
                android:layout_height="@dimen/height_15dp"
                android:src="@drawable/icon_close2"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <ListView
            android:id="@+id/lv_mas_select"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_300dp">

        </ListView>

        <Button
            android:id="@+id/btn_bidtype_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_20dp"
            android:background="@drawable/bgr_bigbtn"
            android:layout_marginTop="@dimen/height_10dp"
            android:layout_marginBottom="@dimen/height_10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="선택 적용"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="@dimen/txt_main"
            />

    </LinearLayout>

</LinearLayout>