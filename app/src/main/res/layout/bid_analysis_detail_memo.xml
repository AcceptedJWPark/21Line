<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:layout_width="@dimen/height_300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40dp"
            android:background="@drawable/bgr_btn_clicked"

            >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="분석 메모"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/txt_main"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            />



            <ImageView
                android:id="@+id/iv_close_memoadd"
                android:layout_width="@dimen/height_15dp"
                android:layout_height="@dimen/height_15dp"
                android:src="@drawable/icon_close2"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_150dp"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/et_analysis_memo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bgr_analysis_inputbox"
                android:layout_marginTop="@dimen/height_10dp"
                android:textColor="@color/textColor_deep"
                android:textSize="@dimen/txt_sub"
                android:gravity="top|left"
                android:hint="담당자에게 남기고 싶은 메모를 입력하세요."
                android:textColorHint="@color/textColor_addition"
                android:lineSpacingMultiplier="1.5"
                android:padding="5dp"
                />


        </LinearLayout>


        <Button
            android:id="@+id/btn_save_analysis_memo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_20dp"
            android:background="@drawable/bgr_bigbtn"
            android:text="저장 하기"
            android:textColor="#ffffff"
            android:textSize="@dimen/txt_main"
            android:layout_marginTop="@dimen/height_10dp"
            android:layout_marginBottom="@dimen/height_10dp"
            />


        </LinearLayout>

    </LinearLayout>


