<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/tv_groupname_edit_mybid"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:textSize="@dimen/txt_main"
            android:paddingLeft="10dp"
            android:textColor="@color/textColor_deep"
            android:text="그룹명 1."
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#f5f5eb"/>

        <TextView
            android:id="@+id/tv_count_edit_mybid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/txt_sub"
            android:textColor="@color/textColor_highlight_ngt"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="17건"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#f5f5eb"/>

        <TextView
            android:id="@+id/tv_rdate_edit_mybid"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/txt_sub"
            android:textColor="@color/textColor_deep"
            android:text="2018-06-12"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#f5f5eb"/>




        <ImageView
            android:id="@+id/iv_groupmodify_edit_mybid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/height_12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_edit"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#f5f5eb"/>
        <ImageView
            android:id="@+id/iv_groupdelete_edit_mybid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/height_12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_delete2"
            />




    </LinearLayout>

</LinearLayout>
