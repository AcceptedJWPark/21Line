<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/customerservice_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40dp"
        android:padding="0dp"
        android:fitsSystemWindows="true"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        >
        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/toolbar"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_30dp"
            android:layout_margin="@dimen/height_10dp"
            >

            <TextView
                android:id="@+id/tv_period_bid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="2018-04-15 ~ 2018-05-15"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/txt_sub" />




            <Spinner
                android:id="@+id/spn_sorting_bid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:padding="0dp"
                android:textSize="@dimen/txt_sub"
                android:textStyle="bold" />


        </RelativeLayout>

        <ListView
            android:id="@+id/lv_bidlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="12"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_30dp"
            android:orientation="horizontal"
            android:layout_margin="@dimen/height_10dp"
        >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bgr_bigbtn"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:padding="3dp"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_20dp"
                    android:src="@drawable/icon_set"
                    android:tint="#ffffff"
                    android:adjustViewBounds="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_20dp"
                    android:text="맞춤설정 1."
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:textSize="@dimen/txt_main"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bgr_bigbtn"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal"
                android:padding="3dp"
                android:gravity="center"
                >

                <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_20dp"
                android:src="@drawable/places_ic_search"
                    android:tint="#ffffff"
                />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_20dp"
                    android:text="공고 검색"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:textSize="@dimen/txt_main"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    />

            </LinearLayout>




        </LinearLayout>

    </LinearLayout>


</LinearLayout>

    <FrameLayout
        android:id="@+id/fl_drawerView_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include
            layout="@layout/drawerlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>