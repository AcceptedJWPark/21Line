<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:background="#ffffff">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/customerservice_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40dp"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            android:fitsSystemWindows="true"
            android:padding="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <include
                layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="15"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_container_result"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="14"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                <com.omadahealth.github.swipyrefreshlayout.library.SwipyRefreshLayout
                    android:id="@+id/swipy_result_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srl_direction="bottom">


                    <ListView
                        android:id="@+id/lv_bidlist_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        />

                </com.omadahealth.github.swipyrefreshlayout.library.SwipyRefreshLayout>


                    <ImageView
                        android:id="@+id/iv_refresh_result"
                        android:layout_width="@dimen/height_30dp"
                        android:layout_height="@dimen/height_30dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="@dimen/height_10dp"
                        />



                    <ImageView
                        android:id="@+id/iv_scrollup_result"
                        android:layout_width="@dimen/height_30dp"
                        android:layout_height="@dimen/height_30dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="@dimen/height_10dp"
                        android:src="@drawable/icon_scrollup"
                        />


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_btn_result"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">



                <LinearLayout
                    android:id="@+id/btn_set_simple_result"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bgr_btn_bid_detail"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_15dp"
                        android:src="@drawable/icon_simplesetting"
                        android:adjustViewBounds="true"
                        android:tint="#ffffff"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_20dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="간편 설정"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/txt_main"
                        android:textStyle="bold" />

                </LinearLayout>



                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    />

                <LinearLayout
                    android:id="@+id/btn_search_result"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bgr_btn_bid_detail"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_15dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/icon_search2"
                        android:tint="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_20dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="통합 검색"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/txt_main"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/fl_drawerView_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include
            layout="@layout/drawerlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true" />
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>