<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/customerservice_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40dp"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            android:fitsSystemWindows="true"
            android:padding="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <include
                layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_searchbox_open_result"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_30dp"
                android:background="#f5f5f5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="검색 조건"
                    android:textColor="@color/textColor_soft"
                    android:textSize="@dimen/txt_main" />

                <ImageView
                    android:id="@+id/iv_searchbox_open_result"
                    android:layout_width="@dimen/height_10dp"
                    android:layout_height="@dimen/height_10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/icon_arrowdown" />


            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="12">

                <com.omadahealth.github.swipyrefreshlayout.library.SwipyRefreshLayout
                    android:id="@+id/swipy_result_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srl_direction="bottom">

                    <ListView
                        android:id="@+id/lv_bidlist_result"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="12"
                        android:clickable="true"
                        android:focusable="false"
                        android:focusableInTouchMode="false" />
                </com.omadahealth.github.swipyrefreshlayout.library.SwipyRefreshLayout>

                <LinearLayout
                    android:id="@+id/ll_sortingbox_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="#f5f5f5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dcdcdc" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_20dp"
                        android:layout_marginTop="@dimen/height_10dp"
                        android:gravity="center"
                        android:text="검색 기간"
                        android:textColor="@color/textColor_deep"
                        android:textSize="@dimen/txt_main"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="80dp"
                        android:layout_marginTop="@dimen/height_5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_SDate_result"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bgr_loginbox"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="2018-04-18"
                            android:textColor="@color/textColor_deep"
                            android:textSize="@dimen/txt_main" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="0.1"
                            android:gravity="center"
                            android:text="~" />

                        <EditText
                            android:id="@+id/et_EDate_result"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/bgr_loginbox"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="2018-04-18"
                            android:textColor="@color/textColor_deep"
                            android:textSize="@dimen/txt_main" />


                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_searchbox_period1_result"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="80dp"
                        android:layout_marginTop="@dimen/height_5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_30dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/bgr_sortingbtn"
                            android:gravity="center"
                            android:text="오늘"
                            android:textSize="@dimen/txt_main" />

                        <ImageView
                            android:id="@+id/iv_searchbox_period1_result"
                            android:layout_width="@dimen/height_15dp"
                            android:layout_height="@dimen/height_15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/icon_checked"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_searchbox_period2_result"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="80dp"
                        android:layout_marginTop="@dimen/height_5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_30dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/bgr_sortingbtn"
                            android:gravity="center"
                            android:text="1 개월"
                            android:textSize="@dimen/txt_main" />

                        <ImageView
                            android:id="@+id/iv_searchbox_period2_result"
                            android:layout_width="@dimen/height_15dp"
                            android:layout_height="@dimen/height_15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/icon_checked" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_searchbox_period3_result"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="80dp"
                        android:layout_marginTop="@dimen/height_5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_30dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/bgr_sortingbtn"
                            android:gravity="center"
                            android:text="3 개월"
                            android:textSize="@dimen/txt_main" />

                        <ImageView
                            android:id="@+id/iv_searchbox_period3_result"
                            android:layout_width="@dimen/height_15dp"
                            android:layout_height="@dimen/height_15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/icon_checked"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_searchbox_period4_result"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="80dp"
                        android:layout_marginTop="@dimen/height_5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_30dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/bgr_sortingbtn"
                            android:gravity="center"
                            android:text="6개월"
                            android:textSize="@dimen/txt_main" />

                        <ImageView
                            android:id="@+id/iv_searchbox_period4_result"
                            android:layout_width="@dimen/height_15dp"
                            android:layout_height="@dimen/height_15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/icon_checked"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_searchbox_period5_result"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="80dp"
                        android:layout_marginTop="@dimen/height_5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_30dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/bgr_sortingbtn"
                            android:gravity="center"
                            android:text="12 개월"
                            android:textSize="@dimen/txt_main" />

                        <ImageView
                            android:id="@+id/iv_searchbox_period5_result"
                            android:layout_width="@dimen/height_15dp"
                            android:layout_height="@dimen/height_15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/icon_checked"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/height_10dp"
                        android:background="#dcdcdc" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_20dp"
                        android:layout_marginTop="@dimen/height_5dp"
                        android:gravity="center"
                        android:text="정렬 순서"
                        android:textColor="@color/textColor_deep"
                        android:textSize="@dimen/txt_main"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/rl_searchbox_sorting1_result"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="80dp"
                        android:layout_marginTop="@dimen/height_5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_30dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/bgr_sortingbtn"
                            android:gravity="center"
                            android:text="결과 발표일 순서"
                            android:textSize="@dimen/txt_main" />

                        <ImageView
                            android:id="@+id/iv_searchbox_sorting1_result"
                            android:layout_width="@dimen/height_15dp"
                            android:layout_height="@dimen/height_15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/icon_checked" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_searchbox_sorting2_result"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="80dp"
                        android:layout_marginTop="@dimen/height_5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_30dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/bgr_sortingbtn"
                            android:gravity="center"
                            android:text="입찰/개찰일 순서"
                            android:textSize="@dimen/txt_main" />

                        <ImageView
                            android:id="@+id/iv_searchbox_sorting2_result"
                            android:layout_width="@dimen/height_15dp"
                            android:layout_height="@dimen/height_15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/icon_checked"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_searchbox_sorting3_result"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="80dp"
                        android:layout_marginTop="@dimen/height_5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_30dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/bgr_sortingbtn"
                            android:gravity="center"
                            android:text="등록마감일 순서"
                            android:textSize="@dimen/txt_main" />

                        <ImageView
                            android:id="@+id/iv_searchbox_sorting3_result"
                            android:layout_width="@dimen/height_15dp"
                            android:layout_height="@dimen/height_15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/icon_checked"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_searchbox_sorting4_result"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="80dp"
                        android:layout_marginTop="@dimen/height_5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_30dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/bgr_sortingbtn"
                            android:gravity="center"
                            android:text="입력일 순서"
                            android:textSize="@dimen/txt_main" />

                        <ImageView
                            android:id="@+id/iv_searchbox_sorting4_result"
                            android:layout_width="@dimen/height_15dp"
                            android:layout_height="@dimen/height_15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/icon_checked"
                            android:visibility="gone" />

                    </RelativeLayout>


                    <Button
                        android:id="@+id/btn_searchbox_save_result"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_20dp"
                        android:layout_marginBottom="@dimen/height_15dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="80dp"
                        android:layout_marginTop="@dimen/height_15dp"
                        android:background="@drawable/bgr_bigbtn"
                        android:text="적용 하기"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/txt_main" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dcdcdc" />

                </LinearLayout>


            </FrameLayout>

            <LinearLayout
                android:id="@+id/ll_btn_result"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_30dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/height_10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bgr_bigbtn"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_20dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/icon_set"
                        android:tint="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_20dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="맞춤설정 1."
                        android:textColor="#ffffff"
                        android:textSize="@dimen/txt_main"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bgr_bigbtn"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_20dp"
                        android:src="@drawable/places_ic_search"
                        android:tint="#ffffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_20dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="공고 검색"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/txt_main"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/fl_drawerView_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include
            layout="@layout/drawerlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true" />
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>