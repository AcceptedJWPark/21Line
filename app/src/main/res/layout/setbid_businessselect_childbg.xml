<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_businessSelect_Child"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/txt_main"
            android:gravity="center_vertical|left"
            android:textColor="@color/textColor_deep"
            android:paddingLeft="20dp"
            />

        <ImageView
            android:id="@+id/iv_businessSelect_Child"
            android:layout_width="@dimen/height_15dp"
            android:layout_height="@dimen/height_15dp"
            android:src="@drawable/icon_checked"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />


    </RelativeLayout>

    </LinearLayout>
