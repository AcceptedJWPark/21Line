<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center"
    android:clickable="true"
    android:focusable="false"
    android:focusableInTouchMode="false"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingTop="@dimen/height_20dp"
        android:paddingBottom="@dimen/height_20dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_price1_search"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:background="@drawable/bgr_loginbox"
                        android:gravity="center"
                        android:inputType="number"
                        android:hint="0"
                        android:textColor="@color/textColor_deep"
                        android:textSize="@dimen/txt_sub" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center|right"
                        android:text="억원"
                        android:textColor="@color/textColor_deep"
                        android:textSize="@dimen/txt_sub" />

                </LinearLayout>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:text="~"
                    android:textColor="@color/textColor_deep"
                    android:textSize="@dimen/txt_main" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_price2_search"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:background="@drawable/bgr_loginbox"
                        android:gravity="center"
                        android:inputType="number"
                        android:hint="50"
                        android:textColor="@color/textColor_deep"
                        android:textSize="@dimen/txt_sub" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center|right"
                        android:text="억원"
                        android:textColor="@color/textColor_deep"
                        android:textSize="@dimen/txt_sub" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_20dp"
                android:layout_marginTop="@dimen/height_10dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bgr_smallbtn"
                    android:includeFontPadding="true"
                    android:text="1억 이하"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/txt_sub" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bgr_smallbtn"
                    android:includeFontPadding="true"
                    android:text="1 ~ 5 억"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/txt_sub" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bgr_smallbtn"
                    android:includeFontPadding="true"
                    android:text="5 ~ 10 억"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/txt_sub" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bgr_smallbtn"
                    android:includeFontPadding="true"
                    android:text="10 ~ 50 억"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/txt_sub" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bgr_smallbtn"
                    android:includeFontPadding="true"
                    android:text="50억 이상"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/txt_sub" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_20dp"
            android:layout_marginTop="@dimen/height_20dp"
            android:background="@drawable/bgr_bigbtn"
            android:text="선택 적용"
            android:textColor="#ffffff"
            android:textSize="@dimen/txt_main"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>