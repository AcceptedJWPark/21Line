<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/rl_search_bid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50dp"
            android:background="@drawable/bgr_dl_list">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="입찰 공고"
                android:textColor="@color/textColor_deep"
                android:textSize="@dimen/txt_main" />




        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_search_result"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50dp"
            android:background="@drawable/bgr_dl_list">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50dp"
            android:text="낙찰 공고"
            android:textSize="@dimen/txt_main"
            android:gravity="center_vertical"
            android:textColor="@color/textColor_deep"
            android:paddingLeft="@dimen/height_10dp"
            android:background="@drawable/bgr_dl_list"
            />


        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
