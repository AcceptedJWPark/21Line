<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="@dimen/height_250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/bgr_btn_clicked">

        <TextView
            android:id="@+id/tv_dialog_setbid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="설정명 변경"
            android:textSize="@dimen/txt_main"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            />

            <ImageView
                android:id="@+id/iv_dialog_titleChange_setbid"
                android:layout_width="@dimen/height_15dp"
                android:layout_height="@dimen/height_15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_close2"
                />

        </RelativeLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bgr_btn_unclicked"
            android:layout_marginTop="@dimen/height_15dp"
            android:text="맞춤설정 1."
            android:paddingLeft="5dp"
            android:textSize="@dimen/txt_main"
            android:textColor="@color/textColor_deep"
            />

        <Button
            android:id="@+id/btn_dialog_titleChange_setbid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_20dp"
            android:background="@drawable/bgr_bigbtn"
            android:layout_marginTop="@dimen/height_20dp"
            android:layout_marginBottom="@dimen/height_20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="저장하기"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="@dimen/txt_main"
            />

    </LinearLayout>

</LinearLayout>