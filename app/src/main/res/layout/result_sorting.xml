<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:layout_width="@dimen/height_300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:id="@+id/ll_sortingbox_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_30dp"
            android:text="검색 기간"
            android:gravity="center|left"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bgr_btn_clicked"
            android:textSize="@dimen/txt_main"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/height_10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/height_5dp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <EditText
                android:id="@+id/et_SDate_result"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="2018-04-18"
                android:gravity="center"
                android:textSize="@dimen/txt_main"
                android:textColor="@color/textColor_soft"
                android:background="@drawable/bgr_loginbox"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/textColor_soft"
                android:text="~"
                />

            <EditText
                android:id="@+id/et_EDate_result"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="2018-04-18"
                android:gravity="center"
                android:textSize="@dimen/txt_main"
                android:textColor="@color/textColor_soft"
                android:background="@drawable/bgr_loginbox"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_searchbox_period1_result"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/height_5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_30dp"
                android:gravity="center"
                android:text="오늘"
                android:textSize="@dimen/txt_main"
                android:textColor="@color/textColor_soft"
                android:layout_centerInParent="true"
                android:background="@drawable/bgr_sortingbtn"
                />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_searchbox_period2_result"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/height_5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_30dp"
                android:gravity="center"
                android:text="1 개월"
                android:textSize="@dimen/txt_main"
                android:textColor="@color/textColor_soft"
                android:layout_centerInParent="true"
                android:background="@drawable/bgr_sortingbtn"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_searchbox_period3_result"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/height_5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_30dp"
                android:gravity="center"
                android:text="3 개월"
                android:textSize="@dimen/txt_main"
                android:textColor="@color/textColor_soft"
                android:layout_centerInParent="true"
                android:background="@drawable/bgr_sortingbtn"
                />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_searchbox_period4_result"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/height_5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/bgr_sortingbtn"
                android:gravity="center"
                android:textColor="@color/textColor_soft"
                android:text="6 개월"
                android:textSize="@dimen/txt_main" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_searchbox_period5_result"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/height_5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/bgr_sortingbtn"
                android:gravity="center"
                android:textColor="@color/textColor_soft"
                android:text="12 개월"
                android:textSize="@dimen/txt_main" />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_30dp"
            android:text="정렬 순서"
            android:gravity="center|left"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bgr_btn_clicked"
            android:textSize="@dimen/txt_main"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/height_10dp"
            />

        <RelativeLayout
            android:id="@+id/rl_searchbox_sorting1_result"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/height_5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/bgr_sortingbtn"
                android:textColor="@color/textColor_soft"
                android:gravity="center"
                android:text="결과 발표일 순서"
                android:textSize="@dimen/txt_main" />

            <ImageView
                android:id="@+id/iv_searchbox_sorting1_result"
                android:layout_width="@dimen/height_15dp"
                android:layout_height="@dimen/height_15dp"
                android:src="@drawable/icon_checked"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_searchbox_sorting2_result"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/height_5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_30dp"
                android:gravity="center"
                android:text="입찰/개찰일 순서"
                android:textSize="@dimen/txt_main"
                android:layout_centerInParent="true"
                android:textColor="@color/textColor_soft"
                android:background="@drawable/bgr_sortingbtn"
                />

            <ImageView
                android:id="@+id/iv_searchbox_sorting2_result"
                android:layout_width="@dimen/height_15dp"
                android:layout_height="@dimen/height_15dp"
                android:src="@drawable/icon_checked"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_searchbox_sorting3_result"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/height_5dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bgr_sortingbtn"
                android:gravity="center"
                android:text="등록마감일 순서"
                android:textColor="@color/textColor_soft"
                android:textSize="@dimen/txt_main" />

            <ImageView
                android:id="@+id/iv_searchbox_sorting3_result"
                android:layout_width="@dimen/height_15dp"
                android:layout_height="@dimen/height_15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_checked"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_searchbox_sorting4_result"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/height_5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bgr_sortingbtn"
                android:gravity="center"
                android:textColor="@color/textColor_soft"
                android:text="입력일 순서"
                android:textSize="@dimen/txt_main" />

            <ImageView
                android:id="@+id/iv_searchbox_sorting4_result"
                android:layout_width="@dimen/height_15dp"
                android:layout_height="@dimen/height_15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_checked"
                android:visibility="gone" />

        </RelativeLayout>


        <Button
            android:id="@+id/btn_searchbox_save_result"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_20dp"
            android:background="@drawable/bgr_bigbtn"
            android:text="적용 하기"
            android:textColor="#ffffff"
            android:textSize="@dimen/txt_main"
            android:layout_marginTop="@dimen/height_20dp"
            android:layout_marginBottom="@dimen/height_10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dcdcdc"
            />




    </LinearLayout>



    </LinearLayout>