<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:id="@+id/ll_result_list_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:clickable="true"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tv_bidNo_Result"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_20dp"
                android:singleLine="true"
                android:textColor="@color/textColor_deep"
                android:textSize="@dimen/txt_sub"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/tv_OrderName_Result"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_20dp"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/textColor_deep"
                android:textSize="@dimen/txt_sub"
                android:gravity="center_vertical"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_bidTitle_Result"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_20dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textSize="@dimen/txt_main"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tv_resultPrice_Result"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/textColor_bidprice"
                android:textSize="@dimen/txt_sub"
                android:gravity="center_vertical"
                />


            <TextView
                android:id="@+id/tv_firstComp_Result"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/textColor_biddate"
                android:singleLine="true"
                android:textSize="@dimen/txt_sub"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                />

            <TextView
                android:id="@+id/tv_failedBid_Result"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/textColor_highlight_ngt"
                android:singleLine="true"
                android:textSize="@dimen/txt_sub"
                android:gravity="center_vertical"
                />




        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bidstateContainer_result"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible"
            >

            <ImageView
                android:id="@+id/iv_bidstate1_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:id="@+id/iv_bidstate2_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bidstate_kinds2"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/iv_bidstate3_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bidstate_kinds3"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/iv_bidstate4_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/iv_bidstate5_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                />

            <ImageView
                android:id="@+id/iv_bidstate6_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/iv_bidstate7_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/iv_bidstate8_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/iv_bidstate9_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                />





        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_myBidClicked_Result"
            android:layout_width="@dimen/height_25dp"
            android:layout_height="@dimen/height_25dp"
            android:src="@drawable/icon_unclicked_mybid_dl"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Memo"
            android:gravity="center"
            android:layout_below="@+id/iv_myBidClicked_Result"
            android:textSize="@dimen/txt_addition"
            android:textColor="@color/textColor_addition"
            android:layout_marginTop="@dimen/height_10dp"
            android:textStyle="bold"
            />

    </RelativeLayout>

</LinearLayout>