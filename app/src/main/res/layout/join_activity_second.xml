<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/customerservice_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_40dp"
        android:padding="0dp"
        android:fitsSystemWindows="true"
        android:contentInsetStart="0dp"
        android:contentInsetLeft="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        >
        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/toolbar"/>
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_30dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <Button
            android:id="@+id/btn_companyuser_join"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="기업 회원"
            android:textSize="@dimen/Txt_btnClicked"
            android:textColor="@color/textColor_clicked"
            android:textStyle="bold"
            android:background="@drawable/bgr_btn_clicked"

            />
        <Button
            android:id="@+id/btn_privateuser_join"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="개인 회원"
            android:textSize="@dimen/Txt_btnUnClicked"
            android:textColor="@color/textColor_unclicked"
            android:background="@drawable/bgr_btn_unclicked"
            />
        <Button
            android:id="@+id/btn_orderuser_join"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="발주처 회원"
            android:textSize="@dimen/Txt_btnUnClicked"
            android:textColor="@color/textColor_unclicked"
            android:background="@drawable/bgr_btn_unclicked"
            />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/height_10dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_30dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="기본정보입력"
                android:gravity="center|left"
                android:textSize="@dimen/txt_sub"
                android:background="@drawable/bgr_btn_clicked"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_45dp"
            android:orientation="horizontal"
            android:background="@drawable/bgr_phoneinputbox"
            android:layout_marginTop="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/textColor_highlight"
                    android:text="*"
                    android:paddingLeft="5dp"
                    android:gravity="center"
                    />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text=" ID"
                android:gravity="center|left"
                android:textColor="@color/textColor_deep"
                android:textSize="@dimen/txt_sub"
                android:textStyle="bold"
                />
            </LinearLayout>
            <EditText
                android:id="@+id/et_memID_joinsecond"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.72"
                android:background="@drawable/bgr_joinbox"
                android:paddingLeft="10dp"
                android:textSize="@dimen/txt_sub"
                android:hint="영문 숫자 혼합 6~12 자리 입력"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.03"/>

            <Button
                android:id="@+id/btn_checkMemID_joinsecond"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:background="@drawable/bgr_smallbtn"
                android:text="중복 확인"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/txt_sub"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_45dp"
            android:orientation="horizontal"
            android:background="@drawable/bgr_phoneinputbox"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/textColor_highlight"
                    android:text="*"
                    android:paddingLeft="5dp"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:text=" 비밀번호"
                    android:gravity="center|left"
                    android:textColor="@color/textColor_deep"
                    android:textSize="@dimen/txt_sub"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/et_password_joinsecond"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bgr_joinbox"
                android:hint="6~12 자리 입력"
                android:paddingLeft="10dp"
                android:textSize="@dimen/txt_sub"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_45dp"
            android:orientation="horizontal"
            android:background="@drawable/bgr_phoneinputbox"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/textColor_highlight"
                    android:text="*"
                    android:paddingLeft="5dp"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:text=" 재입력"
                    android:gravity="center|left"
                    android:textColor="@color/textColor_deep"
                    android:textSize="@dimen/txt_sub"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/et_passwordComp_joinsecond"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bgr_joinbox"
                android:paddingLeft="10dp"
                android:textSize="@dimen/txt_sub"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >

            <include
                android:id="@+id/inc_orderUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/join_joininfo_include"
                />

        </LinearLayout>


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/height_20dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_35dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="부가정보입력"
                android:gravity="center|left"
                android:textSize="@dimen/txt_sub"
                android:background="@drawable/bgr_btn_clicked"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_70dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/bgr_phoneinputbox"
            >


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/textColor_highlight"
                    android:text="*"
                    android:paddingLeft="5dp"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:text=" E-mail"
                    android:gravity="center|left"
                    android:textColor="@color/textColor_deep"
                    android:textSize="@dimen/txt_sub"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_35dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    >
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:background="@drawable/bgr_joinbox"
                android:paddingLeft="10dp"
                android:textSize="@dimen/txt_sub"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:text="＠"
                android:textSize="@dimen/txt_sub"
                android:gravity="center"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:background="@drawable/bgr_joinbox"
                android:paddingLeft="10dp"
                android:textSize="@dimen/txt_sub"
                android:layout_marginRight="10dp"
                />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="입찰정보 발송 및 비밀번호 분실 시 이용"
                    android:textSize="@dimen/txt_addition"
                    android:textColor="#b40000"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



    <Button
        android:id="@+id/btn_next_joinsecond"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_30dp"
        android:layout_marginTop="@dimen/height_20dp"
        android:layout_marginBottom="@dimen/height_20dp"
        android:background="@drawable/bgr_bigbtn"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="가입 완료"
        android:textColor="#ffffff"
        android:textSize="@dimen/btn_txt_big"
        />
    </LinearLayout>
    </ScrollView>
</LinearLayout>
