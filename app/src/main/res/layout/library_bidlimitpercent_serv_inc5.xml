<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            >
    <LinearLayout
        android:id="@+id/ll_basicInfo_result_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/height_10dp"
        android:visibility="visible"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_50dp"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/tv_title_bidlimit"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_20dp"
                    android:layout_alignParentTop="true"
                    android:text="환경부"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/txt_main"
                    android:textColor="@color/textColor_deep"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="- 환경부 고시 제2014-119호, 2014. 07. 25. 기준 -"
                android:gravity="center_vertical"
                android:textSize="@dimen/txt_sub"
                android:textColor="@color/textColor_soft"
                android:layout_marginLeft="5dp"
                />


        </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dcdcdc" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/height_40dp"
            android:orientation="horizontal"
            >



            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minHeight="@dimen/height_40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/txt_main"
                android:textColor="@color/textColor_deep"
                android:background="#f5f5f5"
                android:text="구분"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#dcdcdc"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minHeight="@dimen/height_40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/txt_main"
                android:textColor="@color/textColor_deep"
                android:background="#f5f5f5"
                android:text="추정금액"
                />


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#dcdcdc"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minHeight="@dimen/height_40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/txt_main"
                android:textColor="@color/textColor_deep"
                android:background="#f5f5f5"
                android:text="투찰하한율"
                />





        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dcdcdc" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/height_30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/height_30dp"
                android:layout_weight="3"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/height_30dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:minHeight="@dimen/height_30dp"
                        android:text="건설폐기물처리용역"
                        android:textColor="@color/textColor_soft"
                        android:textSize="@dimen/txt_sub" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#f0f0f0" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="@dimen/height_30dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_25dp"
                            android:gravity="center"
                            android:text="15억 이상"
                            android:textColor="@color/textColor_soft"
                            android:textSize="@dimen/txt_sub" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_25dp"
                            android:gravity="center"
                            android:text="5억 ~ 15억 까지"
                            android:textColor="@color/textColor_soft"
                            android:textSize="@dimen/txt_sub" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_25dp"
                            android:gravity="center"
                            android:text="2 ~ 5억 까지"
                            android:textColor="@color/textColor_soft"
                            android:textSize="@dimen/txt_sub" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_25dp"
                            android:gravity="center"
                            android:text="2억 미만"
                            android:textColor="@color/textColor_soft"
                            android:textSize="@dimen/txt_sub" />


                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#f0f0f0" />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:minHeight="@dimen/height_30dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_25dp"
                            android:gravity="center"
                            android:text="82.995%"
                            android:textColor="@color/textColor_soft"
                            android:textSize="@dimen/txt_sub" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_25dp"
                            android:gravity="center"
                            android:text="85.495%"
                            android:textColor="@color/textColor_soft"
                            android:textSize="@dimen/txt_sub" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_25dp"
                            android:gravity="center"
                            android:text="86.745%"
                            android:textColor="@color/textColor_soft"
                            android:textSize="@dimen/txt_sub" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/height_25dp"
                            android:gravity="center"
                            android:text="87.745%"
                            android:textColor="@color/textColor_soft"
                            android:textSize="@dimen/txt_sub" />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#dcdcdc" />



            </LinearLayout>

        </LinearLayout>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_30dp"
                android:gravity="center_vertical"
                android:text="고시금액 : 2억 1천만원 (2017년 1월 1일 부터 적용)"
                android:textSize="@dimen/txt_main"
                android:textColor="@color/textColor_highlight_pgt_soft"
                android:layout_marginTop="@dimen/height_10dp"
                android:layout_marginBottom="@dimen/height_10dp"
                />




        </LinearLayout>
        </LinearLayout>
    </ScrollView>
    </LinearLayout>

