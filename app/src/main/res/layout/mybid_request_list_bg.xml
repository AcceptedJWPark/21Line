<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    >




    <LinearLayout
        android:id="@+id/ll_request_list_bg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

        <TextView
            android:id="@+id/tv_bidNo_request"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_20dp"
            android:singleLine="true"
            android:textColor="@color/textColor_deep"
            android:textSize="@dimen/txt_sub"
            android:gravity="center_vertical"
            />

            <TextView
                android:id="@+id/tv_OrderName_request"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_20dp"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/textColor_deep"
                android:textSize="@dimen/txt_sub"
                android:gravity="center_vertical"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_bidTitle_request"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_20dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textSize="@dimen/txt_main"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="요청일 : "
                android:textColor="@color/textColor_biddate"
                android:textSize="@dimen/txt_sub"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/tv_bidDate_request"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/textColor_biddate"
                android:textSize="@dimen/txt_sub"
                android:gravity="center_vertical"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="추정 금액 : "
                android:textColor="@color/textColor_bidprice"
                android:textSize="@dimen/txt_sub"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/tv_bidPrice_request"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/textColor_bidprice"
                android:textSize="@dimen/txt_sub"
                android:gravity="center_vertical"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bidstateContainer_request"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible"
            >



            <ImageView
                android:id="@+id/iv_bidstate1_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:src="@drawable/bidstate_icon_1"
                />

            <ImageView
                android:id="@+id/iv_bidstate2_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bidstate_kinds2"
                android:layout_marginLeft="3dp"
                />

            <ImageView
                android:id="@+id/iv_bidstate3_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bidstate_kinds3"
                android:layout_marginLeft="3dp"
                />

            <ImageView
                android:id="@+id/iv_bidstate4_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/iv_bidstate5_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                />

            <ImageView
                android:id="@+id/iv_bidstate6_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/iv_bidstate7_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/iv_bidstate8_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/iv_bidstate9_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                />





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible"
            >

            <TextView
                android:id="@+id/tv_condition1_request"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_20dp"
                android:gravity="center"
                android:background="@drawable/bgr_request_condition2"
                android:text="분석 완료"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:textColor="@color/textColor_deep"
                android:textSize="@dimen/txt_sub"
                android:visibility="visible"
                android:textStyle="bold"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#dcdcdc"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/tv_condition2_request"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_20dp"
                android:gravity="center"
                android:background="@drawable/bgr_request_condition3"
                android:text="담당자 메모 Click"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:textColor="#ffffff"
                android:textSize="@dimen/txt_sub"
                android:visibility="visible"
                android:textStyle="bold"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#dcdcdc"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                >

            <TextView
                android:id="@+id/tv_sendPrice_request"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_20dp"
                android:gravity="center|left"
                android:textColor="@color/textColor_highlight_ngt"
                android:text="추천금액 : 1,123,456,789"
                android:textSize="@dimen/txt_main"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/tv_sendPercent_request"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_20dp"
                android:gravity="center|left"
                android:textColor="@color/textColor_highlight_pgt"
                android:text="사정율 : 99.5687%"
                android:textSize="@dimen/txt_main"
                android:visibility="visible"
                />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_20dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/bgr_analysiscancel"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/tv_cancel_request"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_20dp"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/textColor_highlight_ngt"
                    android:text="분석 취소 Click"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_sub"
                    android:visibility="visible"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        >

        <ImageView
            android:id="@+id/iv_myBidClicked_Request"
            android:layout_width="@dimen/height_25dp"
            android:layout_height="@dimen/height_25dp"
            android:src="@drawable/icon_unclicked_mybid_dl"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />

        <TextView
            android:id="@+id/tv_hasMemoFlag_Request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[Memo]"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/txt_addition"
            android:layout_below="@+id/iv_myBidClicked_Bid"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="gone"
            android:includeFontPadding="false"
            />

    </RelativeLayout>



</LinearLayout>