<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40dp"
            android:background="@drawable/bgr_btn_clicked"
            >

            <TextView
                android:id="@+id/tv_dialog_setbid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="기간 설정"
                android:textSize="@dimen/txt_main"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

            <ImageView
                android:id="@+id/iv_cancel_search"
                android:layout_width="@dimen/height_15dp"
                android:layout_height="@dimen/height_15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_close2"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/height_10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_period1_search"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:background="@drawable/bgr_loginbox"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="2018-06-18"
                        android:textColor="@color/textColor_deep"
                        android:textSize="@dimen/txt_sub" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center|right"
                        android:text="부터"
                        android:textColor="@color/textColor_deep"
                        android:textSize="@dimen/txt_sub" />

                </LinearLayout>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:text="~"
                    android:textColor="@color/textColor_deep"
                    android:textSize="@dimen/txt_main" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_period2_search"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:background="@drawable/bgr_loginbox"
                        android:gravity="center"
                        android:text="2018-06-18"
                        android:inputType="number"
                        android:textColor="@color/textColor_deep"
                        android:textSize="@dimen/txt_sub" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center|right"
                        android:text="까지"
                        android:textColor="@color/textColor_deep"
                        android:textSize="@dimen/txt_sub" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_20dp"
                android:layout_marginTop="@dimen/height_10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_search_today"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bgr_smallbtn"
                    android:includeFontPadding="true"
                    android:text="오늘"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/txt_sub" />

                <Button
                    android:id="@+id/btn_search_1month"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bgr_smallbtn"
                    android:includeFontPadding="true"
                    android:text="1 개월"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/txt_sub" />

                <Button
                    android:id="@+id/btn_search_3month"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bgr_smallbtn"
                    android:includeFontPadding="true"
                    android:text="3 개월"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/txt_sub" />

                <Button
                    android:id="@+id/btn_search_6month"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bgr_smallbtn"
                    android:includeFontPadding="true"
                    android:text="6 개월"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/txt_sub" />

                <Button
                    android:id="@+id/btn_search_12month"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bgr_smallbtn"
                    android:includeFontPadding="true"
                    android:text="12 개월"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/txt_sub" />
            </LinearLayout>
            </LinearLayout>


        <Button
            android:id="@+id/btn_save_period_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_20dp"
            android:background="@drawable/bgr_bigbtn"
            android:layout_marginTop="@dimen/height_20dp"
            android:layout_marginBottom="@dimen/height_20dp"
            android:text="선택 적용"
            android:textSize="@dimen/txt_main"
            android:textColor="#ffffff"
            android:textStyle="bold"
            />

    </LinearLayout>


</LinearLayout>