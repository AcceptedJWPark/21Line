<?xml version="1.0" encoding="utf-8"?>



    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="15"
        android:background="#ffffff"
    >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/customerservice_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_40dp"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            android:fitsSystemWindows="true"
            android:padding="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">

            <include
                layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_30dp"
        android:layout_marginTop="@dimen/height_10dp"
        android:background="@drawable/bgr_btn_clicked"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="기본정보를 입력하세요."
            android:gravity="center"
            android:textSize="@dimen/txt_main"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="(개발 담당자가 직접 전화드립니다.)"
            android:gravity="center"
            android:textSize="@dimen/txt_sub"
            android:layout_marginLeft="5dp"
            android:textColor="@color/textColor_highlight_ngt"
            />

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/height_40dp"
            android:orientation="horizontal"
            >



            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minHeight="@dimen/height_40dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:textSize="@dimen/txt_main"
                android:textColor="@color/textColor_deep"
                android:background="@drawable/bgr_bid_detail_title1"
                android:text="개발 분야"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/height_40dp"
                android:background="@drawable/bgr_bid_detail_contens1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical|left"
                >

                <EditText
                    android:id="@+id/et_develope_catogory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/height_25dp"
                    android:background="@drawable/bgr_analysis_inputbox"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:lineSpacingMultiplier="1.5"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="@dimen/txt_sub"
                    android:textColor="@color/textColor_deep"
                    />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/height_40dp"
            android:orientation="horizontal"
            >



            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minHeight="@dimen/height_40dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:textSize="@dimen/txt_main"
                android:textColor="@color/textColor_deep"
                android:background="@drawable/bgr_bid_detail_title1"
                android:text="업체명"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/height_40dp"
                android:background="@drawable/bgr_bid_detail_contens1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical|left"
                >

                <EditText
                    android:id="@+id/et_develope_comName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/height_25dp"
                    android:background="@drawable/bgr_analysis_inputbox"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="@dimen/txt_sub"
                    android:textColor="@color/textColor_deep"
                    />

            </LinearLayout>


        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/height_40dp"
            android:orientation="horizontal"
            >



            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minHeight="@dimen/height_40dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:textSize="@dimen/txt_main"
                android:textColor="@color/textColor_deep"
                android:background="@drawable/bgr_bid_detail_title1"
                android:text="담당자 성명"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/height_40dp"
                android:background="@drawable/bgr_bid_detail_contens1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical|left"
                >

                <EditText
                    android:id="@+id/et_develope_manName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/height_25dp"
                    android:background="@drawable/bgr_analysis_inputbox"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="@dimen/txt_sub"
                    android:textColor="@color/textColor_deep"
                    />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/height_40dp"
            android:orientation="horizontal"
            >



            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minHeight="@dimen/height_40dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:textSize="@dimen/txt_main"
                android:textColor="@color/textColor_deep"
                android:background="@drawable/bgr_bid_detail_title1"
                android:text="휴대폰"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/height_40dp"
                android:background="@drawable/bgr_bid_detail_contens1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical|left"
                >

                <EditText
                    android:id="@+id/et_develope_celPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/height_25dp"
                    android:background="@drawable/bgr_analysis_inputbox"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="@dimen/txt_sub"
                    android:textColor="@color/textColor_deep"
                    />

            </LinearLayout>


        </LinearLayout>


        <Button
            android:id="@+id/btn_save_develope"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_20dp"
            android:background="@drawable/bgr_bigbtn"
            android:layout_marginTop="@dimen/height_20dp"
            android:text="개발 의뢰"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="@dimen/txt_main_big"
            android:layout_marginBottom="@dimen/height_10dp"
            />

        </LinearLayout>


    </ScrollView>
</LinearLayout>
