<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true"
    >

    <LinearLayout
        android:id="@+id/ll_bid_list_bg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

        <TextView
            android:id="@+id/tv_bidNo_Bid"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_20dp"
            android:singleLine="true"
            android:textColor="@color/textColor_deep"
            android:textSize="@dimen/txt_sub"
            android:gravity="center_vertical"
            />

            <TextView
                android:id="@+id/tv_OrderName_Bid"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_20dp"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/textColor_deep"
                android:textSize="@dimen/txt_sub"
                android:gravity="center_vertical"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_bidTitle_Bid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_20dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textSize="@dimen/txt_main"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >



            <TextView
                android:id="@+id/tv_bidDate_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="입력일 : "
                android:textColor="@color/textColor_biddate"
                android:textSize="@dimen/txt_sub"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/tv_bidDate_Bid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/textColor_biddate"
                android:textSize="@dimen/txt_sub"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/tv_bidPriceType_Bid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="추정 금액 : "
                android:textColor="@color/textColor_bidprice"
                android:textSize="@dimen/txt_sub"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/tv_bidPrice_Bid"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/textColor_bidprice"
                android:textSize="@dimen/txt_sub"
                android:gravity="center_vertical"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bidstateContainer_bid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible"
            >


            <ImageView
                android:id="@+id/iv_bidstate1_bid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:id="@+id/iv_bidstate2_bid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bidstate_kinds2"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/iv_bidstate3_bid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bidstate_kinds3"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/iv_bidstate4_bid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/iv_bidstate5_bid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                />

            <ImageView
                android:id="@+id/iv_bidstate6_bid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/iv_bidstate7_bid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/iv_bidstate8_bid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/iv_bidstate9_bid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                />





        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        >

        <ImageView
            android:id="@+id/iv_myBidClicked_Bid"
            android:layout_width="@dimen/height_25dp"
            android:layout_height="@dimen/height_25dp"
            android:src="@drawable/icon_unclicked_mybid_dl"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />

        <TextView
            android:id="@+id/tv_hasMemoFlag_Bid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[Memo]"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/txt_addition"
            android:layout_below="@+id/iv_myBidClicked_Bid"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="gone"
            android:includeFontPadding="false"
            />

    </RelativeLayout>

</LinearLayout>